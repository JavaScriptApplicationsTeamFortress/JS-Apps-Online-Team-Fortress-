@{
    ViewBag.Title = "Add Cover Letter";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <form method="post" role="form" id="cover-letter-form" class="form-horizontal">
        <fieldset>
            <legend>Personal Information</legend>

            <label for="first-name">First name</label>
            <input type="text" id="first-name" class="form-control" name="first-name" minlength="3" maxlength="20" required data-val-required="Field first name is required." data-val-first-name="First name field length must be between 3 and 20 characters.">
            <span class="text-danger" data-valmsg-for="first-name" data-valmsg-replace="true"></span> @*TODO: fix error messages*@

            <label for="last-name">Last name</label>
            <input type="text" id="last-name" class="form-control" name="last-name" minlength="3" maxlength="20" required data-val-required="Field last name is required." data-val-last-name="Last name field length must be between 3 and 20 characters.">

            <label for="telephone">Telephone</label>
            <input type="text" id="telephone" class="form-control" name="telephone" minlength="10" maxlength="12" data-val-first-name="Telephone field length must be between 10 and 12 characters.">

            <label for="address">Address</label>
            <input type="text" id="address" class="form-control" name="address" minlength="10" maxlength="50" data-val-first-name="Address field length must be between 10 and 50 characters.">

        </fieldset>

        <fieldset>
            <legend>Cover Letter Text</legend>

            <label for="cover-letter-text">Cover Letter Text</label>
            <input type="text" id="cover-letter-text" class="form-control" name="cover-letter-text" style="height: 200px; overflow: scroll; overflow-y: scroll; -webkit-writing-mode: none" minlength="100" maxlength="5000" required data-val-required="Field text of cover letter is required" data-val-first-name="Cover letter text field length must be between 100 and 5000 characters.">
           

            <button id="cover-letter-submit" class="btn btn-default">Submit</button>
        </fieldset>
    </form>
</body>
</html>
