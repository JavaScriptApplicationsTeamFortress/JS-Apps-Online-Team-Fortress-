                    <div class="modal-body">
                        <div class="form-group">
                            <label>Name</label>
                            <input class="form-control" placeholder="Name" data-bind="value: languageViewObject().name">
                        </div>
                        <div class="form-group">
                            <label>Skill group</label>
                            <input class="form-control" placeholder="Skill group" data-bind="value: languageViewObject().skillGroup">
                        </div>
                        <div class="form-group">
                            <label>Listening</label>
                            <input class="form-control" placeholder="Listening" data-bind="value: languageViewObject().listening">
                        </div>
                        <div class="form-group">
                            <label>Reading</label>
                            <input class="form-control" placeholder="Reading" data-bind="value: languageViewObject().reading">
                        </div>
                        <div class="form-group">
                            <label>Speaking</label>
                            <input class="form-control" placeholder="Speaking" data-bind="value: languageViewObject().speaking">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" data-bind="click: $root.addLanguage">Save changes</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="row" id="aditionalInfo">
            <div data-bind='if: additionalInformation() == ""'>
                <div class="col-lg-12" data-bind='visible: additionalInformation() == ""'>
                    <h1>No additional information added.</h1>
                </div>
            </div>

            <div data-bind='ifnot: additionalInformation() == ""'>
                <div class="col-lg-12" data-bind='visibile: additionalInformation() != ""'>
                    <h1> Additional information: </h1>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="col-lg-2">Text: </label>
                            <label class="col-lg-6" data-bind="text: additionalInformation"></label>
                        </div>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary" data-toggle="modal" data-target="#additional-information">Add additional information</button>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="additional-information" tabindex="-1" role="dialog" aria-labelledby="motherLanguage">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Fill your skills</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label>Additional Information</label>
                            <textarea class="form-control" rows="5" data-bind="value: additionalInformation"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-bind="click: $root.updateAdditionalInformation">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br>
</div>

