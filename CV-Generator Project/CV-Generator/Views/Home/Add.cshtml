@{
    ViewBag.Title = "Add CV";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

@Styles.Render("~/Content/font-awesome.min.css")
@Styles.Render("~/Content/shareButtonsStyle.css")

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1>Dashboard</h1>
            <div class="alert alert-dismissable alert-warning">
                <button data-dismiss="alert" class="close" type="button">&times;</button>
                Welcome to the CV section!
            </div>
        </div>
    </div>

    <div class="row" id="aditionalInfo">
        <div data-bind='if: personalInformation() == ""'>
            <div class="col-lg-12" data-bind="visible: personalInformation().firstName == undefined">
                <h1>No personal information added.</h1>
            </div>
        </div>

        <div data-bind='ifnot: personalInformation() == ""'>
            <div class="col-lg-12" data-bind="visible: personalInformation().firstName != undefined">
                <h1> Personal Info: </h1>
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="col-lg-2">First name: </label>
                        <label class="col-lg-4" data-bind="text: personalInformation().firstName"></label>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="col-lg-2">Surname: </label>
                        <label class="col-lg-4" data-bind="text: personalInformation().middleName"></label>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="col-lg-2">Family name: </label>
                        <label class="col-lg-4" data-bind="text: personalInformation().lastName"></label>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="col-lg-2">Date of birth: </label>
                        <label class="col-lg-4" data-bind="text: personalInformation().dateOfBirth"></label>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="col-lg-2">Age: </label>
                        <label class="col-lg-4" data-bind="text: personalInformation().age"></label>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="col-lg-2">E-mail: </label>
                        <label class="col-lg-4" data-bind="text: personalInformation().email"></label>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="col-lg-2">Gender: </label>
                        <label class="col-lg-2" data-bind="text: personalInformation().gender"></label>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="col-lg-2">Phone number: </label>
                        <label class="col-lg-4" data-bind="text: personalInformation().phoneNumber"></label>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="col-lg-2">Street: </label>
                        <label class="col-lg-6" data-bind="text: personalInformation().address"></label>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="col-lg-2">Nationality: </label>
                        <label class="col-lg-4" data-bind="text: personalInformation().nationality"></label>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <label class="col-lg-2">Country: </label>
                        <label class="col-lg-4" data-bind="text: personalInformation().country"></label>
                    </div>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary" data-toggle="modal" data-target="#personalInformation" data-bind="click: $root.createPersonInformation">
            Add personal information
        </button>

        <!-- Modal -->
        <div class="modal fade" id="personalInformation" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Fill your personal information</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label>First name</label>
                            <input class="form-control" placeholder="Your first name" data-bind="value: personalInformation().firstName" required>
                        </div>
                        <div class="form-group">
                            <label>Surname</label>
                            <input class="form-control" placeholder="Your surname" data-bind="value: personalInformation().middleName" required>
                        </div>
                        <div class="form-group">
                            <label>Family name</label>
                            <input class="form-control" placeholder="Your family name" data-bind="value: personalInformation().lastName" required>
                        </div>
                        <div class="form-group">
                            <label>Date of birth</label>
                            <input class="form-control" placeholder="Your date of birth" data-bind="value: personalInformation().dateOfBirth" required>
                        </div>
                        <div class="form-group">
                            <label>Age</label>
                            <input class="form-control" placeholder="Your age" data-bind="value: personalInformation().age" required>
                        </div>
                        <div class="form-group">
                            <label>E-mail</label>
                            <input class="form-control" placeholder="example@mail.com" data-bind="value: personalInformation().email" required>
                        </div>
                        <div class="form-group">
                            <label>Gender</label>
                            <input class="form-control" placeholder="Your gender" data-bind="value: personalInformation().gender" required>
                            @*<select></select>*@
                        </div>
                        <div class="form-group">
                            <label>Phone number</label>
                            <input class="form-control" placeholder="Your phone number" data-bind="value: personalInformation().phoneNumber">
                        </div>
                        <div class="form-group">
                            <label>Street</label>
                            <input class="form-control" placeholder="Street name and number" data-bind="value: personalInformation().address">
                        </div>
                        <div class="form-group">
                            <label>Nationality</label>
                            <input class="form-control" placeholder="Your nationality" data-bind="value: personalInformation().nationality">
                        </div>
                        <div class="form-group">
                            <label>Country</label>
                            <input class="form-control" placeholder="Your country" data-bind="value: personalInformation().country">
                        </div>
                        @*<div class="form-control">
                                <label>Social media</label>
                                <input class="form-control" placeholder="todo fix">
                            </div>*@
                    </div>
                    <div class="modal-footer">
                        @*<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>*@
                        <button type="button" class="btn btn-primary" id="pi-save-changes" data-bind="click: updatePersonalInformation">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- end modal -->
    </div>

    <br>

